{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "ES2021",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ES6",
        "baseUrl": "./src/",
        "outDir": "./js",
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [ "src" ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}